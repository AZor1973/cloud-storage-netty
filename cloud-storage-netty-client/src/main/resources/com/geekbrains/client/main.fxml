<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.client.MainController">
   <HBox alignment="CENTER" layoutY="-8.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-8.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <Label fx:id="currentPathLabelServer" VBox.vgrow="ALWAYS" />
         <ListView fx:id="serverListView" onKeyPressed="#selectFileToDownloadKey" onMouseClicked="#selectFileToDownloadMouse" VBox.vgrow="ALWAYS" />
         <TextField fx:id="output" editable="false" onAction="#downloadRequest" onKeyPressed="#keyHandleOutput" VBox.vgrow="ALWAYS">
            <font>
               <Font size="14.0" />
            </font>
         </TextField>
      </VBox>
      <VBox HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="20.0" right="20.0" />
         </HBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <Label fx:id="connectLabel" onMouseClicked="#labelReconnect" text="SERVER: OFF" />
         <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0">
            <ComboBox fx:id="disksBox" onAction="#selectDiskAction" prefHeight="26.0" prefWidth="78.0">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
         </VBox>
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <Button fx:id="uploadButton" mnemonicParsing="false" onAction="#upload" text="&lt;&lt;">
               <font>
                  <Font size="20.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#downloadRequest" text="&gt;&gt;">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </VBox>
      </VBox>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <Label fx:id="currentPathLabelClient" VBox.vgrow="ALWAYS" />
         <ListView fx:id="clientListView" onKeyPressed="#selectFileToUploadKey" onMouseClicked="#selectFileToUploadMouse" VBox.vgrow="ALWAYS" />
         <TextField fx:id="input" editable="false" onAction="#upload" onKeyPressed="#keyHandleInput" VBox.vgrow="ALWAYS">
            <font>
               <Font size="14.0" />
            </font>
         </TextField>
      </VBox>
   </HBox>
</AnchorPane>
